@model  Student___MVC.Models.Student

@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-bordered text-center table-striped">
    <thead class="bg-info ">
        <tr>
            <th></th>
            <th>
                Name
                @*@Html.DisplayNameFor(model => model.Name)*@
            </th>
            <th>
                Email Id
                @*@Html.DisplayNameFor(model => model.Email)*@
            </th>
            <th>
                Password
                @*@Html.DisplayNameFor(model => model.Password)*@
            </th>
            <th>
                Image
                @*@Html.DisplayNameFor(model => model.DpImage)*@
            </th>
            <th>
                BirthDate
                @*@Html.DisplayNameFor(model => model.BirthDate)*@
            </th>
            <th>
                Mobile No.
                @*@Html.DisplayNameFor(model => model.Mobile)*@
            </th>
            <th>
                Address
                @*@Html.DisplayNameFor(model => model.Address)*@
            </th>
            <th>
                Country
                @*@Html.DisplayNameFor(model => model.Country)*@
            </th>
            <th>
                State
                @*@Html.DisplayNameFor(model => model.State)*@
            </th>
            <th>
                District
                @*@Html.DisplayNameFor(model => model.District)*@
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.StudentList)
        {
            <tr>
                <td>@Html.HiddenFor(modelItem => item.StuId)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @{
                        if (item.DpImageName == null || item.DpImageName == "")
                        {
                            <span>Image Not Found</span>
                        }
                        else
                        {
                            <img src="@Url.Content("/Docs/Images/" + item.DpImageName)" alt="Image" width="120"/>
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.District)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.StuId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.StuId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.StuId })
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
        </tr>
    </tfoot>
</table>
